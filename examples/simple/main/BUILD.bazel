""" This package contains the simplest example of usage of cc_hdrs_map rules. """

load("@rules_cc_hdrs_map//cc_hdrs_map:defs.bzl", "cc_bin")

cc_bin(
    name = "main",
    srcs = ["main.cpp"],
    hdrs_map = {
        "**/messenger.hpp": ["jolly/{filename}"],
    },
    deps = [
        "//simple/messenger:libMessenger",
    ],
)
